<head>
  <%= stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body class="text-center">
  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column align-items-center">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class:"form-signin", method: :post }) do |f| %>
    <h1 class="h3 mb-3 font-weight-normal">Vous avez oublié votre mot de passe ?</h1>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email, class:"sr-only" %>
      <%= f.email_field :email, class: "form-control", id: "inputEmail", placeholder:"Adresse e-mail", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "Réinitialisation du mot de passe", class:"btn btn-primary btn-lg btn-block"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</body>