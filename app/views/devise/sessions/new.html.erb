<head>
  <%= stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body class="text-center">
  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column align-items-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
      <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
      <div class="row">
        <%= f.label :email, class:"sr-only" %>
        <%= f.email_field :email, class: "form-control", id: "inputEmail", placeholder:"Adresse e-mail", autofocus: true, autocomplete: "email" %>
        <%= f.label :password, class:"sr-only" %>
        <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder:"Mot de passe", autocomplete: "current-password" %>
        <div class="checkbox mb-3">
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "checkbox inline" %>
          </div>
        <% end %>
      </div>
      <div class="col-md-12 mb-3">
        <%= f.submit 'Login', class:"btn btn-primary btn-lg btn-block"%>
      </div>
    <%end%>
    <div class="col-md-12 mb-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</body>
