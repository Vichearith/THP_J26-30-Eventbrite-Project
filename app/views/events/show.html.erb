<div class="container">
	<div class="row">
		<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column align-items-center">
        <div class="col-sm-12">
            <div class="col-xs-12 col-sm-8">
                <h2><%= @event.title %></h2>
                <p><strong>Start date: </strong> <%= @event.start_date %> </p>
                <p><strong>Description: </strong> <%= @event.description %> </p>
                <p><strong>Duration: </strong> <%= @event.duration %> </p>
                <p><strong>Location: </strong> <%= @event.location %> </p>
                <p><strong>Price: </strong> <%= @event.price %> </p>
                <p><strong>Admin: </strong> <%= "#{@event.admin.first_name} #{@event.admin.last_name}" %> </p>
                <%if user_signed_in?%><%= link_to 'Edit', edit_event_path(@event) %> | <%end%><%= link_to 'Back', events_path %>
            </div>             
        </div>                            
		</div>
  </div>
</div>

<div class="album py-5">
    <div class="container">
      <div class="row">
        <% @event_participants.each do |attendance| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <h5 class="card-title">              
              <%=link_to "#{attendance.user.first_name} #{attendance.user.last_name}", user_path(attendance.user.id)%>
              </h5>
              <p class="card-text"><%= attendance.user.description %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>      
    </div>
  </div>
  