<div class="container">
	<div class="row">
		<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column align-items-center">
        <div class="col-sm-12">
            <div class="col-xs-12 col-sm-8">
                <h2><%= @user.first_name %> <%= @user.last_name %></h2>
                <p><strong>Description: </strong> <%= @user.description %> </p>
                <p><strong>E-mail: </strong>   <%= @user.email %> </p>
                <%= link_to 'Edit User', edit_user_path %> | <%= link_to 'Edit Password', edit_user_registration_path %>
            </div>             
        </div>                            
		</div>
  </div>
</div>

<div class="album py-5">
    <div class="container">
      <div class="row">
        <% @user_events.each do |event| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <h5 class="card-title">              
              <%=link_to "#{event.title}", event_path(event.id)%>
              </h5>
              <p class="card-text"><%= event.description %></p>
                <div class="row">
                  <div class="col">
                    <%=event.attendances.count %> participant(s)
                  </div> 
                </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>      
    </div>
  </div>
  